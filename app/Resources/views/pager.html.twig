<div class="grid_4" style="text-align: right;">
    <div class="pro3x_pager">
	<span class="ui-icon ui-icon-arrow-1-w pro3x_pager_previous"></span>
	<div class="pro3x_pager_scroll">
	    <div class="pro3x_pager_items">
		{% set min = page - 25 %}
		{% set max = page + 25 %}
		   
		{% if min < 1 %}{% set min = 1 %}{% endif %}
		{% if max > count %}{% set max = count %}{% endif %}
		    
		{% for index in range(min, max) %}
		    {% if pagerParams is defined %}
			<a class="{{ (index == page)?'pro3x_current_page':'pro3x_page' }}" href="{{ path(app.request.attributes.get('_route'), pagerParams|merge({'page': index, 'back': app.request.get('back')})) }}">{{ index }}</a>
		    {% else %}
			<a class="{{ (index == page)?'pro3x_current_page':'pro3x_page' }}" href="{{ path(app.request.attributes.get('_route'), {'page': index, 'back': app.request.get('back')}) }}">{{ index }}</a>
		    {% endif %}
		{% endfor %}
	    </div>
	</div>
	<span class="ui-icon ui-icon-arrow-1-e pro3x_pager_next"></span>
	<div class="clear"></div>
    </div>
</div>