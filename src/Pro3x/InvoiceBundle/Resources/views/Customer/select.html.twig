{% extends '::base.html.twig' %}

{% block page_title %}<span class="pro3x_small_icon pro3x_small_icon_client"></span>{{ 'Izbor | %relation%'|title|trans({'%relation%': relation.description}) }}
| <a href="{{ path('edit_client', {'id': owner.id, 'back': app.request.uri}) }}">{{ owner.descriptionFormated }}</a>
{% endblock %}

{% block body %}
    <div class="grid_12">
	
	{% include '::message.html.twig' %}
	
	<table class="ui-widget-content ui-corner-all pro3x">
	    <thead>
		<tr>
		    <th class="ui-widget-header ui-corner-all">{{ 'Informacije o kupcu'|trans }}</th>
		    <th class="ui-widget-header ui-corner-all" style="width: 300px;">{{ 'Kontakt informacije'|trans }}</th>
		    <th class="ui-widget-header ui-corner-all" style="width: 200px;">{{ 'Alati'|trans }}</th>
		</tr>
	    </thead>
	{% for client in clients %}
	    <tr>
		<td>
		    {% if client.taxNumber %}<div>OIB: {{ client.taxNumber }}</div>{% endif %}
		    <div>{{ client.description|join(', ') }}</div>
		</td>
		<td>
		    <div>{{ client.email }}</div>
		    <div>{{ client.phones|join(', ') }}</div>
		</td>
		<td class="pro3x_tools" style="width: 200px;">
		    <a href="{{ path('add_customer_relation', {'owner': owner.id, 'related': client.id, 'relation': app.request.get('relation'), 'back': app.request.get('back')}) }}">odaberi</a>
		</td>
	    </tr>
	{% else %}
	    <tr>
		<td class="pro3x_no_data" colspan="100">{{ 'Nema rezultata'|trans }}</td>
	    </tr>
	{% endfor %}
	</table>
    </div>

    <div class="grid_8">
	<div class="pro3x_table_buttons" style="margin-top: 0.6em;">
	    <form action="{{ path('select_by_customer', {'owner': owner.id, 'relation': relation.id, 'back': app.request.get('back')}) }}" class="pro3x pro3x_separate_right" method="POST">
		<input class="pro3x" type="text" name="search" value="{{ search }}" />
		<input class="button" type="submit" name="action" value="TraÅ¾i" />
	    </form>
	    <input type="button" data-href="{{ path('add_client', {'back': app.request.uri}) }}" class="button link" value="{{ 'Dodaj'|trans }}" />
	    <input type="button" data-href="{{ app.request.get('back') }}" class="button link" value="{{ 'Odustani'|trans }}" />
	</div>
    </div>

    {% include '::pager.html.twig' with {'count': count, 'page': page} %}

    <div class="pro3x_dialog" title="{{ 'Upozorenje!'|trans }}"></div>

{% endblock %}

{% block javascripts %}{% endblock %}