<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{{ 'Pro3x Online'|trans }}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	<link rel="stylesheet" type="text/css" href="{{ asset('styles/print.css') }}" />
	<script src="{{ asset('bundles/pro3xjqueryui/js/jquery-1.8.2.js') }}"></script>
	<script src="{{ asset('bundles/pro3xjqueryui/js/jquery-ui-1.9.1.custom.js') }}"></script>
	<style type="text/css">
		
	    @import url("https://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700");

	    @page 
		{ margin: 0mm 15mm 0mm 15mm; size: A4; }
	
	    @media print
		{ 
		    .close,
		    .sf-toolbarreset 
			{ display: none; }
		
		    body
			{ padding-top: 0px; }
		}
	
	    .close
		{ position: fixed; left: 0px; width: 100%; top: 0px; text-align: right; background-color: black; border-bottom: solid 5px #4297d7; }

	    .close a
		{ color: white; text-decoration: none; }
		
	    .close a:hover
		{ color: #99cc00; }

	    body 
		{ font-size: 75%; font-family: 'Ubuntu', sans-serif; padding: 0mm; padding-top: 0px; }

	    th
		{ text-align: left; padding-left: 5mm; }

	    td
		{ padding-left: 5mm; }

	    @media screen
		{ 
		    body 
			{ padding-top: 30px; } 
		}

	    .week_separator td
		{ border-top: dashed 1px gray; }
	</style>
    </head>
    <body>
	<div class="close"><div style="padding: 0.75em 1em 0.75em 1em; border-bottom: solid 1px #f2f2f2;"><a style="float: left;" href="javascript: window.print(); return false;">Ispis računa</a>
		<a href="{{ app.request.get('back') }}">Zatvori</a></div></div>
	
	<div style="width: 210mm; height: 305mm; margin: 0mm auto;" style="cursor: pointer;" title="Klikni bilo gdje za ispis računa" onclick="window.print();">
	    <div class="header" style="border-bottom: solid 0.5mm black; padding-bottom: 5mm; margin-bottom: 15mm; margin-top: 15mm;">
		<img src="{{ asset('customer/logo.jpg') }}" style="width: 25mm" />
		<div style="float: right; text-align: right;">
		    <div>Socijalna Samoposluga</div>
		    <div>Žabica 4, 51000 Rijeka</div>
		</div>
		<div style="clear: both"></div>
	    </div>

	    <h1 style="margin-bottom: 10mm;">Kartica kupca</h1>
	    
	    <div>{{ customer.descriptionFormated }}</div>
	    <div>Operater: {{ operator.displayName }}, {{ created|date('d.m.Y, H:i\\h') }}</div>
	   
	    <table style="width: 100%; margin-top: 15mm; border-spacing: 0px; margin-bottom: 10mm;">
		<thead>
		    <tr>
			<th style="padding-left: 0mm;">Datum</th>
			<th style="padding-left: 0mm;">Naziv proizvoda ili usluge</th>
			<th style="text-align: right;">Jedinična cijena</th>
			<th style="text-align: right;">Količina</th>
			<th style="text-align: right;">Osnovica</th>
			<th style="text-align: right;">Popust</th>
			<th style="text-align: right;">Ukupno</th>
		    </tr>
		</thead>
		<tbody>
		{% set total = 0 %}
		{% set week = -1 %}
			
		{% for  item in data %}
			<tr{% if week != item.purchased|date('W') %} {% if week != -1 %} class="week_separator"{% endif %}{% set week = item.purchased|date('W') %}{% endif %}>
			    <td style="padding-left: 0;">{{ item.purchased|date('d.m.Y') }}</td>
			    <td style="padding-left: 0;">{{ item.description }}</td>
			    <td style="text-align: right;">{{ item.unitPrice|number_format(2, ',') }}</td>
			    <td style="text-align: right;">{{ item.totalAmount|number_format(2, ',') }}</td>
			    <td style="text-align: right;">{{ item.totalPrice|number_format(2, ',') }}</td>
			    <td style="text-align: right;">{{ item.discount|number_format(2, ',') }}</td>
			    <td style="text-align: right;">{{ item.total|number_format(2, ',') }}</td>
			</tr>
			{% set total = total + item.total %}
		{% else %}
			<tr>
			    <td colspan="100" style="padding: 5mm 0mm;">Nema rezultata</td>
			</tr>
		{% endfor %}
		</tbody>
	    </table>
	    
	     <div style="text-align: right; border-top: solid 0.5mm transparent; margin-top: 0mm;">
		<h2 style="margin: 0mm 0mm 10mm 0mm;">Ukupni promet: {{ total|number_format(2, ',') }} kn</h2>
	    </div>

	</div>
    </body>
</html>
