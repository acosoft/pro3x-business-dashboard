{% extends "Pro3xInvoiceBundle:Report:print-chrome.html.twig" %}

{% block content %}
    
    <div class="pro3x-document report">
        
    </div>
    
        <div class="pro3x-document report-template shadow">        
            <div class="report-page-header">
                <div style="padding-top: 10mm; padding-left: 10mm;">
                    {% if position.location.logo %}
                        <img src="{{ position.location.logo }}" />
                    {% endif %}
                </div>

                <div style="text-align: right; font-size: 12px; font-weight: 300; padding-right: 10mm;">
                    <div>{{ position.location.companyName }}</div>
                    <div>{{ position.location.address }}</div>
                    <div>{{ position.location.other }}</div>
                </div>

                <div class="clearfix"></div>

                <h1 class="pro3x"><span class="pro3x-report-title">Kartica kupca</span><small class="pro3x-report-subtitle"><span class="report-page-number"></span> / <span class="report-page-count"></span></small></h1>
                <div class="clearfix"></div>

                <div class="pro3x-document-info">
                    <div style="width: 85mm; float: left;">

                        {% set total = 0 %}
                        {% for  item in data %}
                            {% set total = total + item.total %}
                        {% endfor %}

                        <div><span class="pro3x-name">Operater</span>{{ operator.displayName }}</div>
                        <div><span class="pro3x-name">Datum</span>{{ 'now'|date('d.m.Y') }}</div>
                        <div><span class="pro3x-name">Vrijeme</span>{{ 'now'|date('H:i\\h') }}</div>

                        {% if customer.taxNumber %}
                        <div><span class="pro3x-name">Ukupno</span>{{ total|number_format(2, ',', '.') }}kn</div>
                        {% endif %}
                    </div>

                    <div style="float: right; width: 100mm;">
                        <div class="pro3x-value"><span class="pro3x-name">Kupac</span>{{ customer.name }}</div>
                        <div class="pro3x-value"><span class="pro3x-name">Adresa</span>{{ customer.address }}</div>
                        <div class="pro3x-value"><span class="pro3x-name">Lokacija</span>{{ customer.location }}</div>
                        {% if customer.taxNumber %}
                        <div class="pro3x-value"><span class="pro3x-name">OIB</span>{{ customer.taxNumber }}</div>
                        {% endif %}
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>   

            <div class="report-content">
                <div class="panel panel-default" style="width: 200mm; margin: 5mm 5mm 5mm 5mm;">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Datum</th>
                                <th>Naziv proizvoda ili usluge</th>
                                <th style="text-align: right;">Jedinična cijena</th>
                                <th style="text-align: right;">Količina</th>
                                <th style="text-align: right;">Osnovica</th>
                                <th style="text-align: right;">Popust</th>
                                <th style="text-align: right;">Ukupno</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% set week = -1 %}

                        {% for  item in data %}
                                <tr class="report-item">
                                    <td>{{ item.purchased|date('d.m.Y') }}</td>
                                    <td>{{ item.description }}</td>
                                    <td style="text-align: right;">{{ item.unitPrice|number_format(2, ',', '.') }}</td>
                                    <td style="text-align: right;">{{ item.totalAmount|number_format(2, ',', '.') }}</td>
                                    <td style="text-align: right;">{{ item.totalPrice|number_format(2, ',', '.') }}</td>
                                    <td style="text-align: right;">{{ item.discount|number_format(2, ',', '.') }}</td>
                                    <td style="text-align: right;">{{ item.total|number_format(2, ',', '.') }}</td>
                                </tr>
                        {% else %}
                                <tr class="report-item">
                                    <td colspan="100" style="padding: 5mm 0mm;">Nema rezultata</td>
                                </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <div class="clearfix"></div>
            </div>
                    
            <div class="report-content-footer">
                <div style="text-align: right; border-top: solid 0.5mm transparent; margin-top: 0mm;">
                    <h3 style="margin: 0mm 10mm 0mm 0mm; font-weight: 300;">Ukupno: {{ total|number_format(2, ',', '.') }}kn</h3>
                </div>

                <div class="clearfix"></div>
            </div>

            <div class="pro3x-footer report-page-footer" style="background-color: rgb(249, 249, 249) !important;">
                <div>{{ position.location.note1 }}</div>
                <div>{{ position.location.note3 }}</div>
            </div>
        </div>
        
{% endblock %}
    
{% block javascript %}
    {{ parent() }}
    
    $('.report').report('.report-template', {removeTemplate: true});
{% endblock %}
	    