<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{{ 'Pro3x Online'|trans }}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	<link rel="stylesheet" type="text/css" href="{{ asset('styles/print.css') }}" />
	<script src="{{ asset('bundles/pro3xjqueryui/js/jquery-1.8.2.js') }}"></script>
	<script src="{{ asset('bundles/pro3xjqueryui/js/jquery-ui-1.9.1.custom.js') }}"></script>
	<style type="text/css">
		
	    @import url("https://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700");

	    @page 
		{ margin: 15mm 15mm 25mm 15mm; size: A4; }
	
	    @media print
		{ 
		    .close,
		    .sf-toolbarreset, .no_print
			{ display: none; }
		
		    body
			{ padding-top: 0px; }
			
		    .header
			{ margin-top: 0mm; }
		}
	
	    .close
		{ position: fixed; left: 0px; width: 100%; top: 0px; text-align: right; background-color: black; border-bottom: solid 5px #4297d7; }

	    .close a
		{ color: white; text-decoration: none; }
		
	    .close a:hover
		{ color: #99cc00; }

	    body 
		{ font-size: 75%; font-family: 'Ubuntu', sans-serif; padding: 0mm; padding-top: 0px; }

	    th
		{ text-align: left; padding-left: 5mm; }

	    td
		{ padding-left: 5mm; }
		
	    table.pro3x_print td
		{ vertical-align: top; padding-bottom: 2.5mm; padding-top: 2.5mm; }

	    table.pro3x_print tr td
		{ border-bottom: dashed 1px #dedede; }
		
	    thead tr th
		{ border-bottom: solid 1px black; padding-bottom: 2.5mm; }

	    @media screen
		{ 
		    body 
			{ padding-top: 30px; } 
			
		    .header
			{ margin-top: 15mm; }
		}

	    .week_separator td
		{ border-top: dashed 1px gray; }
	</style>
    </head>
    <body>
	<div class="close"><div style="padding: 0.75em 1em 0.75em 1em; border-bottom: solid 1px #f2f2f2;"><a style="float: left;" href="javascript: window.print();">Ispis izvještaja</a>
		<a href="{{ app.request.get('back') }}">Zatvori</a></div></div>
	
	<div style="width: 210mm; height: 305mm; margin: 0mm auto; cursor: pointer;" title="Klikni bilo gdje za ispis računa" onclick="window.print();">
	    <div class="header" style="border-bottom: solid 0.5mm black; padding-bottom: 5mm; margin-bottom: 15mm;">
		{{ logo|raw }}
		{{ company|raw }}
		<div style="clear: both"></div>
	    </div>

	    <h1 style="margin-bottom: 0mm;">Popis kupaca</h1>
	    <div>Operater: {{ operator.displayName }}, {{ 'now'|date('d.m.Y, H:i\\h') }}</div>
	   
	    <table class="pro3x_print" style="width: 100%; margin-top: 15mm; border-spacing: 0px; margin-bottom: 10mm;">
		<thead>
		    <tr>
			<th style="padding-left: 0mm; width: 45mm;">Naziv</th>
			<th>Adresa</th>
			<th>Lokacija</th>
			<th>Rođen</th>
			<th>Kontakt</th>
		    </tr>
		</thead>
		<tbody>
		{% set alter = false %}
		{% for  item in data %}
		    <tr {% if alter %}class="alter"{% endif %}>
			<td style="padding-left: 0mm;">{{ item.name }}</td>
			<td>{{ item.address }}</td>
			<td>{{ item.location }}</td>
			<td>{% if item.birthday %}{{ item.birthday|date('d.m.Y') }}{% endif %}</td>
			<td>
			    {{ item.email }}
			    <div></div>
			    <div>{{ item.phones|join(', ') }}</div>
			</td>
		    </tr>
		    {% set alter = not alter %}
		{% else %}
			<tr>
			    <td colspan="100" style="padding: 5mm 0mm;">Nema rezultata</td>
			</tr>
		{% endfor %}
		</tbody>
	    </table>
	    <div class="no_print" style="height: 20mm"></div>
	</div>
    </body>
</html>
