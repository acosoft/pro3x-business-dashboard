{% extends "Pro3xInvoiceBundle:Report:print-chrome.html.twig" %}

{% block content %}
    
        <div class="pro3x-document shadow">        
            
            <div style="padding-top: 10mm; padding-left: 10mm;">
                {% if position.location.logo %}
                    <img src="{{ position.location.logo }}" />
                {% endif %}
            </div>
            
            <div style="text-align: right; font-size: 12px; font-weight: 300; padding-right: 10mm;">
                <div>{{ position.location.companyName }}</div>
                <div>{{ position.location.address }}</div>
                <div>{{ position.location.other }}</div>
            </div>
            
            <div class="clearfix"></div>

            <h1 class="pro3x">Promet prema načinu plaćanja</h1>
            <div class="clearfix"></div>
            
            <div class="pro3x-document-info">
                <div style="width: 85mm; float: left;">
                    
                    {% set total = 0 %}
                    {% for  item in items %}
                        {% set total = total + item.total %}
                    {% endfor %}
                        
                    <div><span class="pro3x-name">Operater</span>{{ operator.displayName }}</div>
                    <div><span class="pro3x-name">Ukupno</span>{{ total|number_format(2, ',', '.') }}kn</div>
                </div>
                
                <div style="float: right; width: 100mm;">
                    <div><span class="pro3x-name">Datum</span>{{ created|date('d.m.Y') }}</div>
                    <div><span class="pro3x-name">Vrijeme</span>{{ created|date('H:i\\h') }}</div>
                </div>
                
                <div class="clearfix"></div>
            </div>
	   
            <div class="panel panel-default" style="width: 200mm; margin: 5mm 5mm 5mm 5mm;">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Način plaćanja</th>
                            <th style="text-align: right;">Iznos prometa</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for  item in items %}
                            <tr>
                                <td>{{ item.transactionType }}</td>
                                <td style="text-align: right;">{{ item.total|number_format(2, ',', '.') }}</td>
                            </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
                    
            <div style="text-align: right; border-top: solid 0.5mm transparent; margin-top: 0mm;">
                    <h3 style="margin: 0mm 10mm 0mm 0mm; font-weight: 300;">Ukupno: {{ total|number_format(2, ',', '.') }}kn</h3>
                </div>
                    
            <div class="clearfix"></div>
        </div>
        
{% endblock %}