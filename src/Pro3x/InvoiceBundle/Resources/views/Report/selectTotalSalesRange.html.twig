{% extends '::form.html.twig' %}

{% block page_title %}<img src="{{ asset('icons/small/chart.png') }}" />Pregled prometa{% endblock %}

{% block header %} 
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/locales/bootstrap-datepicker.hr.min.js"></script>
{% endblock %}

{% block body %}
    <div class="col-md-6 col-md-offset-3">
	<form class="form-horizontal" action="{{ path('print_total_sales_report') }}" method="POST">
	    <div class="panel panel-default">
                <div class="panel-heading">{{ 'Izbor perioda'|trans }}</div>
		<div class="panel-body pro3x-panel-form">
		    <div class="pro3x_form_content">

                        <div class="form-group">
                            {{ form_label(form.location, form.location.vars.label, {'label_attr': {'class': 'control-label col-md-4'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.start_date, form.start_date.vars.label, {'label_attr': {'class': 'control-label col-md-4'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(form.start_date, {'attr': {
                                    'class': 'form-control',
                                    'data-provide': 'datepicker',
                                    'data-date-format': 'dd.mm.yyyy',
                                    'data-date-autoclose': 'true'
                                }}) }}
                            </div>
                            <div class="clearfix"></div>
                        </div>
                            
                        <div class="form-group">
                            {{ form_label(form.end_date, form.end_date.vars.label, {'label_attr': {'class': 'control-label col-md-4'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(form.end_date, {'attr': {
                                    'class': 'form-control',
                                    'data-provide': 'datepicker',
                                    'data-date-format': 'dd.mm.yyyy',
                                    'data-date-autoclose': 'true'
                                }}) }}
                            </div>
                            <div class="clearfix"></div>
                        </div>
			
			{{ form_rest(form) }}
			
		    </div>
		</div>
	    </div>
              
            <div class="pro3x-buttons">
                <input type="submit" class="btn btn-primary" value="{{ 'PrikaÅ¾i'|trans }}" />
                <a class="btn btn-primary" href="{{ path('dashboard') }}">{{ 'Odustani'|trans }}</a>
            </div>

            <input type="hidden" name="back" value="{{ app.request.uri }}" />
	</form>
    </div>
{% endblock %}

{% block javascripts %}
    
{% endblock %}
    
