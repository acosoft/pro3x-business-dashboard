{% extends '::base.html.twig' %}

{% block page_title %}<img src="{{ asset("icons/small/#{icon}.png") }}" />{{ 'Popis grupa'|trans }}{% endblock %}

{% block body %}
    <div class="col-md-12">
	{% include '::message.html.twig' %}
	
	<div class="panel panel-default pro3x-table-panel">
        <table class="table table-striped table-hover table-bordered">
	    <thead>
		<tr>
		    <th>{{ 'Naziv grupe'|trans }}</th>
		    <th>{{ 'Alati'|trans }}</th>
		</tr>
	    </thead>
	{% for group in groups %}
	    <tr>
		<td>{{ group.name }}</td>
		<td class="pro3x-tools" style="width: 200px;">
		    <a href="{{ path('edit_group', {'id': group.id, 'back': app.request.uri }) }}">{{ 'izmjeni'|trans }}</a>
		    <a class="pro3x-confirm" data-icon="pro3x_icon_group_delete" 
		       data-msg="{{ 'Jeste li sigurni da želite izbrisati grupu <b>%name%</b>?'|trans({ '%name%': group.name }) }}" 
		       href="{{ path('delete_group', {'id': group.id, 'back': app.request.uri}) }}">{{ 'izbriši'|trans }}</a>
		</td>
	    </tr>
	{% else %}
	    <tr>
		<td class="pro3x_no_data" colspan="100">{{ 'Nema rezultata'|trans }}</td>
	    </tr>
	{% endfor %}
	</table></div>
    </div>

    <div class="col-md-6">
	<div class="pro3x-table-buttons" style="margin-top: 0.6em;">
	    <a href="{{ path('add_group', {'back': app.request.uri}) }}" class="btn btn-primary">{{ 'Dodaj'|trans }}</a>
	    <a href="{{ path('dashboard') }}" class="btn btn-primary">{{ 'Dashboard'|trans }}</a>
	</div>
    </div>
            
    {% include '::dialog.html.twig' %}
    
{% endblock %}
    
{% block javascripts %}{% endblock %}